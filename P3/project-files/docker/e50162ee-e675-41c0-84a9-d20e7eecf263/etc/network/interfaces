# This is a network config for a routeur within a static vxlan

auto eth0
iface eth1 inet static
	address 10.1.1.2
	netmask 255.255.255.252 # /30

auto lo
iface lo inet static
	address 1.1.1.2
	netmask 255.255.255.255 # /32

auto vxlan10 
iface vxlan10 inet manual
 	pre-up /sbin/ip link add vxlan10 type vxlan id 10 dstport 4789
 	post-up /sbin/ip link set dev vxlan10 up 

auto br0
iface br0 inet manual
	pre-up /sbin/ip link add name br0 type bridge
	post-up /sbin/ip link set dev br0 up
	post-up brctl addif br0 eth1
	post-up brctl addif br0 vxlan10			
